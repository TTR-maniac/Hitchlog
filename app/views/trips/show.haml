- title(t('.title', :from_city => trip.from_city_sanitized, :to_city => trip.to_city_sanitized))

= hidden_field_tag :trip_from,  trip.from_formatted_address 
= hidden_field_tag :trip_to,    trip.to_formatted_address
= hidden_field_tag :trip_route, trip.route

.row-fluid.sidebar-right
  .span9.primary-column.trip-detail
    = render 'trips/trip', trip: trip

  %section.span3.sidebar.secondary-column#secondary-nav
    = render 'users/profile', user: trip.user
    = render 'users/geomap', user: trip.user

-content_for :javascript_at_bottom do
  %script{:src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyAoRZxn3x2YppDC6ZpnUjE8v9RKBRa1oWA&libraries=places", :type => "text/javascript"}
  = javascript_include_tag "custom/show_trip"
